@model Sign_up
@{
	ViewData["Title"] = "Sign In";
	// THIS IS THE FIX: It tells the page NOT to use the master layout file.
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Google Fonts - Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Dashboard.css">
   
</head>
<body>

    <!-- Sidebar -->
    <nav id="sidebar" class="sidebar">
        <div class="sidebar-header d-flex align-items-center">
            <i class="bi bi-speedometer2 me-2 fs-2 text-primary"></i>
            <span>AdminPanel</span>
        </div>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link active" href="#">
                    <i class="bi bi-grid-fill"></i>
                    Dashboard
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">
                    <i class="bi bi-cart-check-fill"></i>
                    Orders
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">
                    <i class="bi bi-box-seam-fill"></i>
                    Products
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">
                    <i class="bi bi-people-fill"></i>
                    Customers
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">
                    <i class="bi bi-graph-up-arrow"></i>
                    Analytics
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">
                    <i class="bi bi-gear-fill"></i>
                    Settings
                </a>
            </li>
        </ul>
    </nav>

    <!-- Main Content -->
    <main class="main-content">
        <!-- Top Navbar -->
        <nav class="navbar navbar-expand-lg navbar-light bg-white rounded-3 mb-4 sticky-top">
            <div class="container-fluid">
                <!-- Mobile Sidebar Toggler -->
                <button class="btn btn-light d-lg-none me-2 sidebar-toggler" type="button" id="sidebarToggle">
                    <i class="bi bi-list"></i>
                </button>

                <!-- Search Form -->
                <form class="d-flex w-50">
                    <div class="input-group">
                        <span class="input-group-text bg-light border-0" id="search-addon"><i class="bi bi-search"></i></span>
                        <input type="search" class="form-control bg-light border-0" placeholder="Search..." aria-label="Search">
                    </div>
                </form>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <img src="https://placehold.co/40x40/0D6EFD/FFFFFF?text=U" alt="User" width="40" height="40" class="rounded-circle me-2">

                                <!-- ===================================== -->
                                <!-- PLACEHOLDER FOR USERNAME DISPLAY -->
                                <!-- Replace "Username" with dynamic data -->
                                <span id="username-display" class="fw-bold">@Model.Email</span>
                                <!-- ===================================== -->

                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" href="#"><i class="bi bi-person-circle me-2"></i>Profile</a></li>
                                <li><a class="dropdown-item" href="#"><i class="bi bi-gear me-2"></i>Settings</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-danger" href="#"><i class="bi bi-box-arrow-right me-2"></i>Logout</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Action Button Container -->
        <div class="action-button-container">
            <a asp-controller="Dashboard" asp-action="AddStudent"  class="action-btn btn btn-primary shadow-lg">
                <i class="bi bi-person-plus-fill"></i>
                Add Student
            </a>
            <a asp-controller="Dashboard" asp-action="MarkAttendence"  class="action-btn btn btn-success shadow-lg">
                <i class="bi bi-calendar-check-fill"></i>
                Mark Student Attendance
            </a>
            <a asp-controller="Dashboard" asp-action="View_student" class="action-btn btn btn-success shadow-lg">
                <i class="bi bi-calendar-check-fill"></i>
                View Student Attendance
            </a>
        </div>

    </main>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const sidebarToggle = document.getElementById('sidebarToggle');
            const sidebar = document.getElementById('sidebar');

            if (sidebarToggle) {
                sidebarToggle.addEventListener('click', function () {
                    sidebar.classList.toggle('active');
                });
            }

            // Optional: Dynamically set the username for demonstration
            // In a real application, you would fetch this from your server/API

            // const usernameDisplay = document.getElementById('username-display');
            // if(usernameDisplay) {
            //      You can replace "Admin User" with the actual logged-in user's name
            //     usernameDisplay.textContent = "Admin User";
            // }
        });
    </script>
</body>
</html>

