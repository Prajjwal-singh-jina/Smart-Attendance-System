<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Student Attendance System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"/>

    <style>
        /* Matte Navbar Style */
        .navbar-custom {
            background-color: #2C3E50; /* Matte dark blue-grey */
            padding: 1rem 2rem; /* Slightly thicker */
            opacity: 80%;
        }
        .navbar-custom .navbar-brand,
        .navbar-custom .nav-link {
            color: #ECF0F1; /* Light text for contrast */
            font-weight: 500;
        }
        .navbar-custom .nav-link:hover {
            color: #BDC3C7; /* Subtle hover effect */
        }
        .btn-signin {
            background-color: #E67E22; /* Matte accent color */
            color: #fff;
            font-weight: 500;
        }
        .btn-signin:hover {
            background-color: #D35400; /* Slightly darker on hover */
            color: #fff;
        }
        body {
            background-color: #F5F5F5; /* Light matte background */
        }

        .banner{
            transition: transform 0.3s ease; /* smooth animation */
        }
        .banner:hover{
            transform: scale(1.01);
        }
        footer {
            background-color: #ECF0F1;
            padding: 1rem 0;
            text-align: center;
        }

        .banner-wrapper {
            margin: 0;
            padding: 0;
            width: 100%;
        }

        .banner-img {
            width: 100%;
            height: 400px; /* adjust height if needed */
            object-fit: cover; /* crops nicely */
            display: block; /* removes bottom whitespace */
            animation: zoomEffect 0.5s ease-in-out;
        }
       


    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Student Attendance System</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"><i class="bi bi-list" style="font-size: 1.7rem; color: white;"></i></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-signin ms-3" asp-area="" asp-controller="Account" asp-action="signin">Sign In</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Banner Section (place it just below header and before .container) -->
    <div class="banner-wrapper">
        <img src="https://www.smartschoolerp.com/wp-content/uploads/2022/12/attendance-management.jpg"
             alt="Students Banner"
             class="banner-img" />
    </div>

    <!-- Keep your existing .container for main content -->
    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>


    <footer>
        &copy; 2025 - Student Attendance System -  <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

